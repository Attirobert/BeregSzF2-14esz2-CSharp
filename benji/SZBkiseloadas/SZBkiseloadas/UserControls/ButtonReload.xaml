<UserControl x:Class="SZBkiseloadas.UserControls.ButtonReload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBkiseloadas.UserControls" xmlns:icon="clr-namespace:SZBkiseloadas.Icons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="50" Width="50"  Margin="20" Cursor="Hand">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Color="#FFE8E8E8"/>
        </Grid.Effect>
        <Rectangle RadiusX="25" RadiusY="25" Fill="#24C165"/>
        <icon:Reload Height="16"/>
    </Grid>
</UserControl>
