<UserControl x:Class="SZBkiseloadas.UserControls.NotifiButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBkiseloadas.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="buttonNoti">
    <Border Cursor="Hand" BorderBrush="{Binding Fill,ElementName=buttonNoti}" BorderThickness="1" Height="44" Width="107" Background="White" CornerRadius="17">
        <ContentControl Content="{Binding Text,ElementName=buttonNoti}" FontFamily="Segoe UI" FontSize="14" VerticalAlignment="Center"  HorizontalAlignment="Center" Foreground="{Binding Fill,ElementName=buttonNoti}"/>
    </Border>
</UserControl>
