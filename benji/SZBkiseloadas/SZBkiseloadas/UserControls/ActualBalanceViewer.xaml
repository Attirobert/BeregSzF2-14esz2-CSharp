<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBkiseloadas.UserControls"
             xmlns:Icons="clr-namespace:SZBkiseloadas.Icons" x:Class="SZBkiseloadas.UserControls.ActualBalanceViewer"
             mc:Ignorable="d" x:Name="BalanceWindow">
    <StackPanel>
        <Border Height="50" Width="288" CornerRadius="23" Background="#F6F6F6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ContentControl x:Name="balance" Content="{Binding Value, ElementName=BalanceWindow}" FontFamily="Segoe UI" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ContentControl Content=" Ft" FontFamily="Segoe UI" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        <ContentControl Margin="0 2" FontFamily="Segoe UI" Content="Aktuális egyenleg" Foreground="#707070" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
