<UserControl x:Class="SZBkiseloadas.UserControls.Button2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBkiseloadas.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="button">
    <Border Height="50" Background="White" BorderBrush="#24C165" BorderThickness="1" Width="260" CornerRadius="25" Cursor="Hand">
        <ContentControl Content="{Binding Text,ElementName=button}" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="20" Foreground="#24C165"/>
    </Border>
</UserControl>
