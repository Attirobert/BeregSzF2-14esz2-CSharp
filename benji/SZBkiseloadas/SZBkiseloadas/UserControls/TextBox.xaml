<UserControl x:Class="SZBkiseloadas.UserControls.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SZBkiseloadas.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="input">
    <Grid Height="40" Width="260">
        <ContentControl x:Name="contentControl1" Content="{Binding PlaceHolder, ElementName=input}" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="14" Foreground="#24C165" Margin="2 0" GotFocus="contentControl1_GotFocus"/>
        <Separator VerticalAlignment="Bottom" BorderThickness="1" BorderBrush="#707070"/>
        <TextBox x:Name="textBox1" TextWrapping="NoWrap"  Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontSize="14" Foreground="#24C165" TextChanged="TextBox_TextChanged"/>

    </Grid>
</UserControl>
